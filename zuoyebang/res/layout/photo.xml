<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
  		/>

       <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
		     android:layout_alignParentTop="true"
		     android:layout_marginTop="120dp"
             android:background="#fff"
		/>
        <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
              android:layout_centerInParent="true"    
              android:layout_alignParentTop="true"           
              android:layout_marginTop="240dp"
                    
             android:background="#fff"
		/>
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
              android:layout_centerInParent="true" 
             android:layout_alignParentTop="true"            
             android:layout_marginTop="360dp"              
             android:background="#fff"
		/>
         
         <ImageView
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="213dp"              
             android:background="#fff"
		/>
         
           <ImageView
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:layout_alignParentLeft="true"            
             android:layout_marginLeft="426dp"              
             android:background="#fff"
		/>
         
    <ImageView
        	 android:id="@+id/focus_indicator_idle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
 			 android:visibility="invisible"        
             android:background="@drawable/focus_idle"></ImageView>
    
    <ImageView
        	 android:id="@+id/focus_indicator_idle_small"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
 			 android:visibility="invisible" 
 			  android:scaleType="center"
             android:scaleX="0.5"    
             android:scaleY="0.5"             
             android:background="@drawable/focus_idle"></ImageView>
    
     <ImageView
        	 android:id="@+id/focus_indicator_success"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"   
             android:scaleType="center"
             android:scaleX="0.5"    
             android:scaleY="0.5"                         
             android:background="@drawable/focus_success"
             android:visibility="invisible"></ImageView>
     <ImageView
        	 android:id="@+id/focus_indicator_fail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"   
             android:scaleType="center"
             android:scaleX="0.5"    
             android:scaleY="0.5"      
              android:visibility="invisible"                   
             android:background="@drawable/focus_fail"></ImageView>
  
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#00000000"     
        android:layout_alignParentRight="true" >

         <TextView
             android:id="@+id/cancel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/cancel"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="60dp"
             android:layout_centerHorizontal="true"
             android:textColor="#fff"
             android:drawableTop="@drawable/camera_icon_cancel"
             android:gravity="center"
             android:clickable="true"
             android:text="取消" 
             android:onClick="cancelPhoto"/>

         <ImageButton
             android:id="@+id/take"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:background="@drawable/camera_take_photo_normal"
             android:text="Button" 
             android:onClick="capture"/>
         
         <ImageView
             android:id="@+id/take1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_centerInParent="true"          
             android:background="@drawable/common_camera_gray"
             android:text="Button" />

         <TextView
             android:id="@+id/store"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="60dp"
             android:drawableTop="@drawable/camera_icon_album"
             android:gravity="center"
              android:clickable="true"
             android:onClick="openStore"
             android:text="相册" />
    
    </RelativeLayout>
</RelativeLayout>
